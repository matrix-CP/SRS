@model tblStudent

<h2>Update Existing Student</h2>
<form asp-action="">
    <div class="form-group">
        <label for="">Name</label>
        <input class="form-control" type="text" asp-for="@Model.c_name" />
    </div>
    <div class="form-group">
        <label for="">Dob</label>
        <input class="form-control" type="date-time-locale" asp-for="@Model.c_birthdate" />
    </div>
    <div class="form-group">
        <label for="">Gender</label>
        <input type="radio" asp-for="@Model.c_gender" value="Male"/> Male
        <input type="radio" asp-for="@Model.c_gender" value="Female"/> Female
        <input type="radio" asp-for="@Model.c_gender" value="Other"/> Other
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input class="form-control" type="text" asp-for="@Model.c_address" />
    </div>
    <div class="form-group">
        <label for="">Languages</label>
        <input name="c_language" type="checkbox" value="Hindi"><label for="">Hindi</label>
        <input name="c_language" type="checkbox" value="English"><label for="">English</label>
        <input name="c_language" type="checkbox" value="Gujarati"><label for="">Gujarati</label>

    </div>
    <div class="form-group">
        <label for="">Courses</label>
        <select class="form-control" asp-for="@Model.c_course" asp-items="">
        </select>
    </div>
    <div class="form-group">
        <label for="">Profile</label>
        <input class="form-control" type="file" asp-for="@Model.c_profile" />
    </div>
    <div class="form-group">
        <label for="">Document</label>
        <input class="form-control" type="file" asp-for="@Model.c_document" />
    </div>
    <div class="form-group">
        <label for="">Mobile Number</label>
        <input class="form-control" type="number" asp-for="@Model.c_mobile" />
    </div>
    <input class="btn btn-success" type="submit" value="Update Student">
</form>